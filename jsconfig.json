{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2021",
    "checkJs": true,
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".cache",
    ".tmp",
    "dist"
  ]
}
